# Uncomment this line to define a global platform for your project
platform :ios, '8.0'
use_frameworks!

source 'https://github.com/CocoaPods/Specs.git'

target 'XMTableViewAdapter' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  

  # Pods for XMTableViewAdapter
  #网络请求
  pod 'Moya', '~> 6.5.0'
  pod 'Moya/RxSwift', '~> 6.5.0'
  
  pod 'Result', '~>2.1.3'
  pod 'RxSwift', '~>2.6.0'

  #图片加载
  pod 'Kingfisher', '~> 2.4.2' #缓存加载牛逼
  #图片获取
  pod 'BSImagePicker', '~> 2.3.0'
  pod 'BSGridCollectionViewLayout', '~> 1.1.1'
  pod 'UIImageViewModeScaleAspect', '~> 1.5'
  #JSON 转 Model
  pod 'SwiftyJSON', '~> 2.3.2'  #处理需要的数据
  pod 'ObjectMapper', '~> 1.3' #将上述处理好的数据转化成Model

  #扩展类
  pod 'EZSwiftExtensions', '~> 1.5'
  #计算Cell高度
  pod 'UITableView+FDTemplateLayoutCell', '~> 1.5.beta'
  
  pod 'MJRefresh', '~> 3.1.12'
  
  pod 'SnapKit', '~> 0.15.0'
end
